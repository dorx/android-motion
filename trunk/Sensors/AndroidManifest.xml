<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.julian.apps.Sensors"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".Sensors"
                  android:label="@string/app_name" android:configChanges="keyboardHidden" android:screenOrientation="landscape">
                  <uses-permission android:name="android.permission.HARDWARE_TEST"></uses-permission>
                  <uses-permission android:name="android.permission.WAKE_LOCK" />
                  
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    	<service class=".RecorderService" android:name=".RecorderService" android:process=":remote">
    			  <uses-permission android:name="android.permission.WAKE_LOCK" />
    	</service>
    
    </application>
    <uses-sdk android:minSdkVersion="3" />

<uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"></uses-permission>

<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
</manifest> 